{
    "name": "checksum-verify",
    "version": "0.1.0",
    "description": "Automatically verify cryptographic digests of downloaded and uploaded files",
    "private": true,
    "scripts": {
        "watch": "export NODE_OPTIONS=--openssl-legacy-provider && webpack --mode=development --watch --config config/webpack.config.js",
        "debug": "export NODE_OPTIONS=\"--openssl-legacy-provider --inspect\" && webpack --mode=development --debug --config config/webpack.config.js",
        "build": "export NODE_OPTIONS=--openssl-legacy-provider && webpack --mode=production --config config/webpack.config.js"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^6.4.1",
        "css-loader": "^4.3.0",
        "file-loader": "^6.2.0",
        "mini-css-extract-plugin": "^0.10.1",
        "size-plugin": "^2.0.2",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2",
        "webpack-merge": "^5.8.0",
        "markdown-loader": "^8.0.0"
    },
    "dependencies": {
        "crypto-js": "^4.1.1"
    }
}
